{% extends 'base.html.twig' %}

{% block contenu %}

    {% block liens %}
    <br/>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{path('prostages_accueil')}}"  class="link-dark">Accueil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Formations</li>
                    </ol>
                </nav> 
    {% endblock %}

    <table class="table">
        <thead>
            <tr>
            <th scope="col"> {% block head1 %}  Formation  {% endblock %}</th>
            <th scope="col"> {% block head2 %}  Code  {% endblock %}</th>
            </tr>
        </thead>

        <tbody>
                {% for formationCourante in formations %}
                    <tr>
                    <!-- Lien vers la page du stage-->
                    <th scope="row"><a href="{{path('prostages_formation',{id:formationCourante.id})}}">{{formationCourante.nomLong}} </a> </th>
                    <td>{{formationCourante.nomCourt}}</td>
                    </tr>
                    {% endfor %}

        </tbody>


    </table>
  
{% endblock %}
 

